<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ cedula }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ apellido }} </p>
        <p>{{ nombre }} </p>
        <p>{{ edad }} </p>
        <p>{{ ciudad }} </p>
        <p>{{ comuna }} </p>
        <p>{{ barrio }} </p>
        <p>{{ sintomas }} </p>
        <p>{{ patologias }} </p>
        <!-- REQUEST -->
        <form action="/notes/status/{{_id}}?_method=POST" method="POST">
          <input type="hidden" name="status" value="POST">
          <button type="submit" class="btn btn-primary btn-block btn-sm">Status</button>
        </form>
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">There are not Notes yet.</p>
      <a href="/notes/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>